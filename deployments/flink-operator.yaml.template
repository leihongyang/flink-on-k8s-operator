apiVersion: v1
kind: Namespace
metadata:
  name: {{operator_namespace}}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{operator_name}}
  namespace: {{operator_namespace}}
  labels:
    app.kubernetes.io/name: {{operator_name}}
    app.kubernetes.io/version: {{operator_version}}
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: {{operator_name}}
      app.kubernetes.io/version: {{operator_version}}
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app.kubernetes.io/name: {{operator_name}}
        app.kubernetes.io/version: {{operator_version}}
      initializers:
        pending: []
    spec:
      serviceAccountName: {{operator_service_account}}
      containers:
      - name: {{operator_name}}
        image: {{operator_image}}
        imagePullPolicy: IfNotPresent
